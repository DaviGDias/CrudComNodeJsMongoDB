<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <title>Document</title>
</head>

<body>
    <div class="container">
        <br>
        <h2>Editar</h2>
        <% data.forEach(function(details){ %>
        <div class="container">
            <form action="/edit/<%=details._id %>" method="POST">

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputNome">Nome</label>
                        <input type="text" class="form-control" value="<%=details.nome %>" name="nome" id="inputNome"
                            placeholder="Nome">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputSobrenome">Sobrenome</label>
                        <input type="text" class="form-control" value="<%=details.sobrenome %>" name="sobrenome"
                            id="inputSobrenome" placeholder="Digite seu Sobrenome">
                    </div>
                    <div class="form-group col-md-12">
                        <label for="inputEndereco">Endereço</label>
                        <input type="text" class="form-control" value="<%=details.endereco %>" name="endereco"
                            placeholder="Rua, Taquara N° 1234">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inpuDataNascimento">Data de nascimento</label>
                        <input type="date" class="form-control" value="<%=details.dataNascimento %>"
                            name="dataNascimento" id="">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputTelefone">Telefone</label>
                        <input type="text" class="form-control" value="<%=details.telefone %>" name="telefone" id="">
                    </div>

                    <div class="form-group col-md-7">
                        <label for="inputCidade">Cidade</label>
                        <input type="text" class="form-control" value="<%=details.cidade %>" name="cidade"
                            placeholder="Cidade">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="inputEstado">Estado</label>
                        <input type="text" class="form-control" value="<%=details.estado %>" name="estado"
                            placeholder="Estado">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputCep">Cep</label>
                        <input type="text" class="form-control" value="<%=details.cep %>" name="cep" placeholder="CEP">
                    </div>
                    <br>
                    <button class="btn btn-darck mr-auto" type="submit">Salvar</button>
                    <button class="btn btn-darck "><a href="/show">Voltar</a></button>
                </div>
            </form>
            <%})%>
        </div>
</body>

</html>